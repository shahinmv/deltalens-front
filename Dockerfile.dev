# Development Dockerfile with hot reload
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY bun.lockb* ./

# Install dependencies
RUN npm install -g bun || echo "Bun not available, using npm"
RUN (bun install) || (npm install)

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Start development server
CMD ["npm", "run", "dev"]